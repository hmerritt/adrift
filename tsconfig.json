{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": false,
        "baseUrl": "src",
        "checkJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "sourceMap": false,
        "strict": false,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
